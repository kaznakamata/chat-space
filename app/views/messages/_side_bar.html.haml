.wrapper
  .wrapper__side_bar
    .wrapper__side_bar__user
      .wrapper__side_bar__user__name
        = current_user.name
      .wrapper__side_bar__user___btn
        =link_to new_group_path, class: "wrapper__side_bar__user__btn" do
          =icon('fas', 'edit')
          %span<>
        =link_to edit_user_path(current_user), class: "wrapper__side_bar__user__btn" do
          =icon('fas', 'cog')
          %span<>
    .wrapper__side_bar__groups
      - current_user.groups.each do |group|
        .wrapper__side_bar__groups__view
          = link_to group_messages_path(group) do
            .wrapper__side_bar__groups__view__name
              = group.name
            .wrapper__side_bar__groups__view__message
              = group.show_last_message